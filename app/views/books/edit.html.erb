<p>
<% if flash[:notice]%>
  <%= flash[:notice] %>
<% end %>
</p>

<p>
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
　   <%= message %>
　  <% end %>
  <% end %>
</p>

<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>

<p>
<%= link_to "Show", book_path(@book.id) %>
</p>
<p>
<%= link_to "Back", books_path %>
</p>

<% end %>
